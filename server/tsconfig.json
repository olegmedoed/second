{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "noImplicitAny": false,
    "experimentalDecorators": true,

    "sourceMap": true,
    "module": "CommonJS",
    "target": "es6",
    "lib": ["es2017"],
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
